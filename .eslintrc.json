{
    "env": {
        "es6": true,
        "webextensions": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "URL": false,
        "URLSearchParams": false
    },
    "rules": {
        "comma-dangle": [
            "error", {
                "arrays": "always-multiline",
                "objects": "always-multiline",
                "imports": "always-multiline",
                "exports": "always-multiline"
            }
        ],
        "curly": ["error", "all"],
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "semi": ["error", "always"]
    }
}
